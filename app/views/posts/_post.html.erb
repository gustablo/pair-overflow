<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email %>
  </p>

  <p>
    <strong><%= pluralize post.offer.count, "offer" %></strong>
  </p>

</div>
